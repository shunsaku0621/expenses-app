


<h1>記事一覧</h1>
<%= link_to "投稿する", new_expense_path, class:"post" %>




<%= month_calendar events: @incomes do |date, events| %>
  <%= date.day %>
  <% sum = 0 %>
  <% events.each do |event| %>
    <% sum += event.amount %>
  <% end %>
  <% if sum>0 %>
    <div>
      <%= sum %>円
    </div>
  <% end %>
<% end %>







<% @incomes.each do |income| %>
  <% if @day_params.slice(0,7) == income.start_time.strftime('%Y-%m') %>
    <div class="income">
      <div class="income-genre">
        <%= income.category.name %>
      </div>
      <div class="income-title">
        <%= income.amount %>
      </div>
      <div class="income-text">
        <%= income.memo %>
      </div>
    </div>
  <% end %>
<% end %>